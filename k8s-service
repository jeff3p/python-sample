apiVersion: v1
kind: Service
metadata:
  name: python-sample-svc
  labels:
    app: python-sample
spec:
  selector:
    app: python-sample
  ports:
    - name: http
      port: 80            # cluster-internal port
      targetPort: 8080    # container port (matches PORT env)
      protocol: TCP
  type: ClusterIP
